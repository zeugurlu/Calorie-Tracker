@using Caloracker1.Data
@model IEnumerable<Caloracker1.Models.Comment>

@{
    ViewData["Title"] = "Index";
}
@{
    <script>
        function redirectToIndexPage() {
            window.location.href = '@Url.Action("Index", "Premium")';
        }
    </script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
}


    <div class="mt-3">
        <a asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
            </svg> Add Comment
        </a>
    </div>

<div class="row g-5">
    <div class="col-9">
        @foreach (var item in Model)
        {
            <div class="mb-3 mt-3">
                <label for="exampleFormControlTextarea1" class="form-label">@Html.DisplayFor(modelItem => item.Title)</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="@Html.DisplayFor(modelItem => item.ContentOfComment)" value="@Html.DisplayFor(modelItem => item.ContentOfComment)" disabled></textarea>
                <div class="mt-3 d-grid gap-1 d-md-flex justify-content-md-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark me-md-2" type="button">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark" type="button">Delete</a>
                </div>

            </div>
        }
    </div>
    <div class="col-3">
        <div class="col" onclick="redirectToIndexPage()" style="cursor:pointer;">
            <img src="~/images/SideBanner.jpeg" style="width:300px;height:600px"></img>
        </div>
    </div>
</div>


