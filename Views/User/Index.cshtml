@model List<IdentityUser>
@using Microsoft.AspNetCore.Identity

<h2 style="margin:2rem 0 1rem 0; " >User List</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-dark">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
