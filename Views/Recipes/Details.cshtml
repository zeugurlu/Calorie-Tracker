                </svg>  @Html.DisplayFor(model => model.Type)
            </p>
            <div class="d-grid gap-2" style="padding: 0 25px; margin-top:15px;">
                <form method="post" action="@Url.Action("UpdateDailyCalorie", "Tracks")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" value="@userId" />
                    <input type="hidden" name="calorie" value="@Model.Calorie" />
                    <input type="hidden" name="karbs" value="@Model.Karbs" />
                    <input type="hidden" name="proteins" value="@Model.Proteins" />
                    <input type="hidden" name="fats" value="@Model.Fats" />
                    @if (!User.IsInRole(UserRoles.Role_Admin))
                    {
                    <button style="width:15rem;" type="submit" class="btn btn-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                        </svg> Add
                    </button>
}
                </form>
                <a style="width:15rem; margin: 0 5px;" asp-controller="CommentsOfRecipes" asp-action="IndexOfRecipe" asp-route-id="@Model?.Id" class="btn btn-dark" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-dots-fill" viewBox="0 0 16 16">
                        <path d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7M5 8a1 1 0 1 0-2 0 1 1 0 0 0 2 0m4 0a1 1 0 1 0-2 0 1 1 0 0 0 2 0m3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
                    </svg> Comments
                </a>

            </div>
        </div>
        <div class="col-6 mt-2">
            <p style="text-align:start; font-size:20px; text-decoration:underline;">Ingredients</p>
            <p style="color:black; font-size:14px; line-height: 1.5; text-align:start; margin-left:2rem;">
                <ul>
                    @foreach (var ingredient in ingredientsList)
                    {
                        <li>@ingredient</li>
                    }
                </ul>
            </p>
            <p style="text-align:start; font-size:20px; text-decoration:underline;">Construction</p>
            <p style="color:black; font-size:14px; margin:10px; padding:0 15px; line-height: 1.5; text-align: justify;">
                @Html.DisplayFor(model => model.Description)
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Carbonhydrate</th>
                        <th scope="col">Protein</th>
                        <th scope="col">Fat</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td> @Html.DisplayFor(model => model.Karbs) gr</td>
                        <td>@Html.DisplayFor(model => model.Proteins) gr</td>
                        <td>@Html.DisplayFor(model => model.Fats) gr</td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="col" onclick="redirectToIndexPage()" style="cursor:pointer;">
            <img src="~/images/SideBanner.jpeg" style="width:300px;height:600px"></img>
        </div>
    </div>
</div>
@if (User.IsInRole(UserRoles.Role_Admin))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}