        })
            .then(response => {
                if (response.ok) {
                    // If the meal is successfully added, redirect to the Index page
                    window.location.href = '@Url.Action("Index", "Premium")';
                } else {
                    // Handle the case where adding the meal fails
                    console.error('Failed to add the meal to the tracker.');
                }
            })
            .catch(error => {
                console.error('An error occurred while adding the meal:', error);
            });
    }
