
@using Caloracker1.Data
@model Caloracker1.Models.Track

@{
    ViewData["Title"] = "Details";
}
@{
    <script>
        function redirectToIndexPage() {
            window.location.href = '@Url.Action("Premium", "CreditCards")';
        }
    </script>

    var totalKarbsPercentage = Model != null ? Model.TotalKarbs?.ToString("F0") + "%" : "0%";
    var totalFatsPercentage = Model != null ? Model.TotalFats?.ToString("F0") + "%" : "0%";
    var totalProteinsPercentage = Model != null ? Model.TotalProteins?.ToString("F0") + "%" : "0%";


}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col mt-2">
            <img src="~/images/trackerImg.png" style="width:230px; height:230px;"></img>
            <p style="color:black; font-size:18px; font-weight:600; margin:10px;"> Budget </p>
            <p style="color:green; font-size:16px; font-weight:500; margin:10px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-wallet-fill" viewBox="0 0 16 16">
                    <path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v2h6a.5.5 0 0 1 .5.5c0 .253.08.644.306.958.207.288.557.542 1.194.542.637 0 .987-.254 1.194-.542.226-.314.306-.705.306-.958a.5.5 0 0 1 .5-.5h6v-2A1.5 1.5 0 0 0 14.5 2z" />
                    <path d="M16 6.5h-5.551a2.678 2.678 0 0 1-.443 1.042C9.613 8.088 8.963 8.5 8 8.5c-.963 0-1.613-.412-2.006-.958A2.679 2.679 0 0 1 5.551 6.5H0v6A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5z" />
                </svg> @Html.DisplayFor(model => model.TotalBudget) kcal
            </p>
            <p style="color:black; font-size:18px; font-weight:600; margin:10px;"> Todays Calorie </p>
            <p style="color:orangered; font-size:16px; font-weight:500; margin:10px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check-fill" viewBox="0 0 16 16">
                    <path d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2m-5.146-5.146-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708z" />
                </svg> @Html.DisplayFor(model => model.DailyCalorie) kcal
            </p>

            <p style="color:black; font-size:18px; font-weight:600; margin:10px;"> Water </p>
            <p style="color:cornflowerblue; font-size:16px; font-weight:500; margin:10px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-droplet-half" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M7.21.8C7.69.295 8 0 8 0c.109.363.234.708.371 1.038.812 1.946 2.073 3.35 3.197 4.6C12.878 7.096 14 8.345 14 10a6 6 0 0 1-12 0C2 6.668 5.58 2.517 7.21.8zm.413 1.021A31.25 31.25 0 0 0 5.794 3.99c-.726.95-1.436 2.008-1.96 3.07C3.304 8.133 3 9.138 3 10c0 0 2.5 1.5 5 .5s5-.5 5-.5c0-1.201-.796-2.157-2.181-3.7l-.03-.032C9.75 5.11 8.5 3.72 7.623 1.82z" />
                    <path fill-rule="evenodd" d="M4.553 7.776c.82-1.641 1.717-2.753 2.093-3.13l.708.708c-.29.29-1.128 1.311-1.907 2.87z" />
                </svg> @Html.DisplayFor(model => model.CupWater) Cup
            </p>
            <div>
                <a type="button" class="btn btn-dark" style="width: 11rem; margin-top:1rem;" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            </div>
        </div>
        <div class="col-6 mt-5">
            <div class="container text-center">
                <div class="row mb-3" style="display:flex; gap:2rem;">
                    <div class="col" style="border: 4px solid orange; height:10rem; max-width:11rem; display:flex; flex-direction:column; align-items:center; justify-content:center;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="orange" class="bi bi-egg-fried" viewBox="0 0 16 16">
                            <path d="M8 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                            <path d="M13.997 5.17a5 5 0 0 0-8.101-4.09A5 5 0 0 0 1.28 9.342a5 5 0 0 0 8.336 5.109 3.5 3.5 0 0 0 5.201-4.065 3.001 3.001 0 0 0-.822-5.216zm-1-.034a1 1 0 0 0 .668.977 2.001 2.001 0 0 1 .547 3.478 1 1 0 0 0-.341 1.113 2.5 2.5 0 0 1-3.715 2.905 1 1 0 0 0-1.262.152 4 4 0 0 1-6.67-4.087 1 1 0 0 0-.2-1 4 4 0 0 1 3.693-6.61 1 1 0 0 0 .8-.2 4 4 0 0 1 6.48 3.273z" />
                        </svg>
                        <p style="color:orange; font-size:19px; font-weight:600;">Breakfast</p>
                        <p style="color:#b2b7bb; font-size:16px; font-weight:500;"> @Html.DisplayFor(model => model.Breakfast) kcal</p>
                    </div>
                    <div class="col" style="border: 4px solid red; height:10rem;max-width:11rem; display:flex; flex-direction:column; align-items:center; justify-content:center;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-brightness-high-fill" viewBox="0 0 16 16">
                            <path d="M12 8a4 4 0 1 1-8 0 4 4 0 0 1 8 0M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z" />
                        </svg>
                        <p style="color:red; font-size:19px; font-weight:600;">Lunch</p>
                        <p style="color:#b2b7bb; font-size:16px; font-weight:500;"> @Html.DisplayFor(model => model.Lunch) kcal</p>
                    </div>
                    <div class="col" style="border: 4px solid cornflowerblue; height:10rem;max-width:11rem; display:flex; flex-direction:column; align-items:center; justify-content:center;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="cornflowerblue" class="bi bi-moon-fill" viewBox="0 0 16 16">
                            <path d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278" />
                        </svg>
                        <p style="color:cornflowerblue; font-size:19px; font-weight:600;">Dinner</p>
                        <p style="color:#b2b7bb; font-size:16px; font-weight:500;"> @Html.DisplayFor(model => model.Dinner) kcal</p>
                    </div>
                </div>
            </div>
            <p style="color:black,; font-size:19px; font-weight:600; text-align:left;">Fat</p>
            <div class="progress" role="progressbar" aria-label="Info striped example" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-striped bg-info" style="width: @totalFatsPercentage;">@totalFatsPercentage</div>
            </div>
            <p style="color:black,; font-size:19px; font-weight:600; text-align:left;">Carbonhydrate</p>
            <div class="progress" role="progressbar" aria-label="Success striped example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-striped bg-success" style="width: @totalKarbsPercentage;">@totalKarbsPercentage</div>
            </div>
            <p style="color:black,; font-size:19px; font-weight:600; text-align:left;">Protein</p>
            <div class="progress" role="progressbar" aria-label="Warning striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-striped bg-warning" style="width: @totalProteinsPercentage;">@totalProteinsPercentage</div>
            </div>
        </div>
        <div class="col" onclick="redirectToIndexPage()" style="cursor:pointer;">
            <img src="~/images/SideBanner.jpeg" style="width:300px;height:600px"></img>
        </div>
    </div>
</div>

